<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>controller.authentication.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.authentication.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetTypeController</servlet-name>
        <servlet-class>controller.SetTypeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieController</servlet-name>
        <servlet-class>controller.MovieController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePageController</servlet-name>
        <servlet-class>controller.CreatePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMovieController</servlet-name>
        <servlet-class>controller.DeleteMovieController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditMovieController</servlet-name>
        <servlet-class>controller.EditMovieController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>excuteEditController</servlet-name>
        <servlet-class>controller.excuteEditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewMovieVideoController</servlet-name>
        <servlet-class>controller.ViewMovieVideoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserController</servlet-name>
        <servlet-class>controller.DeleteUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>controller.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>mp4</extension>
        <mime-type>video/mp4</mime-type>
    </mime-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetTypeController</servlet-name>
        <url-pattern>/SetTypeController</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>MovieController</servlet-name>
        <url-pattern>/MovieController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePageController</servlet-name>
        <url-pattern>/CreatePageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMovieController</servlet-name>
        <url-pattern>/DeleteMovieController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditMovieController</servlet-name>
        <url-pattern>/EditMovieController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>excuteEditController</servlet-name>
        <url-pattern>/excuteEditController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewMovieVideoController</servlet-name>
        <url-pattern>/ViewMovieVideoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserController</servlet-name>
        <url-pattern>/DeleteUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
